<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ansible.processor.compile" class="RouterOS\Generator\Provider\Ansible\Processor\CompileProcessor">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="ansible.manager.module"/>
            <argument type="service" id="routeros.util.compiler"/>
            <argument type="service" id="routeros.util.cache_manager"/>
            <argument type="service" id="ansible.constant"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- build event listeners -->
        <service id="ansible.build.listeners.checkout" class="RouterOS\Generator\Provider\Ansible\Build\CheckoutAnsibleCollection">
            <argument>%ansible.git.repository%</argument>
            <argument>%ansible.git.branch%</argument>
            <argument>%ansible.target_dir%</argument>
            <tag name="kernel.event_subscriber"/>
            <tag name="ansible.build_event"/>
        </service>

        <service id="ansible.build.listeners.cleanup_target" class="RouterOS\Generator\Provider\Ansible\Build\CleanupTarget">
            <argument type="service" id="ansible.manager.module"/>
            <argument type="service" id="ansible.constant"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>