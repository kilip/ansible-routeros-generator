{% set module_complete_name=resource.moduleNamespace ~ "." ~ resource.moduleName%}
{% set docs = resource.documentations %}
DOCUMENTATION="""
module: {{ resource.moduleName }}
author: Anthonius Munthi (@kilip)
short_description: {{ docs.short_description }}
description:
{% for description in docs.descriptions %}
- {{ description }}
{% endfor %}
version_added: {{ resource.versionAdded }}
options:
  state:
    type: str
    choices: {{ resource.module.states|json_encode|raw }}
    description: Set module state
    default: {{ resource.module.default_state }}
  config:
    description: A dictionary of `{{ resource.command }}` parameters
    type: {{ resource.type == "config" ? "list":"dict" }}
{% if resource.type == "config" %}
    elements: dict
{% endif %}
    suboptions:
{% include "module/parameters.yaml.twig" %}
"""

EXAMPLES="""
{% for example in resource.examples %}
# ----
# {{ example.title }}
# ----
# before:
{{ example.pre|yaml_comment|raw }}
- name: {{ example.name }}
  kilip.routeros.{{  module_name }}:
{{ example.argument_spec|format_yaml|raw }}
# after:
{{ example.post|yaml_comment|raw }}
{% endfor %}
"""

